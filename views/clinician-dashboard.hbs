<section class="nav-bar">
    <ul class="nav-bar-1">
        <li class="nav-bar-left"><h1><a href="/clinician/signup">Sign up new patients</a></h1></li>
        <li class="nav-bar-mid"><h1>Dashboard</h1></li>
        <li class="nav-bar-right"><h1><a href="/clinician/comments">Comments</a></h1></li>
    </ul>
</section>

<ul class="info-bar">
    <li class="info-bar-name"><p>Name</p></li>
    <li class="info-bar-bgl"><p>Blood Glucose</p><h2>nmol/L<h2></li>
    <li class="info-bar-wght"><p>Weight</p><h2>Kg</h2></li>
    <li class="info-bar-doses"><p>Dose Taken</p></li>
    <li class="info-bar-steps"><p>Steps</p></li>
</ul>

<HR class="dashboard-line">

{{#each data}}
<table class="patient-info" href="/clinician/{{this._patient._id}}">
    {{#if this.highlight}}
    <tr class="patient-info-highlight">
    {{else}}
    <tr class="patient-info-normal">
    {{!-- <tr class="patient-info-highlight"> --}}
    {{/if}}
    <td class="patient-info-left"><a href="/clinician/{{this._patient._id}}">{{this._patient.first_name}} {{this._patient.last_name}}</a></td>

    {{#if this.higher}}
    <td>{{this.bgl.val}}<div class="to_top"></div></td>
    {{#if this.lower}}
    <td>{{this.bgl.val}}<div class="to_bottom"></div></td>
    {{else}}
    <td >{{this.bgl.val}}</td>
    {{/if}}


    {{#if this.higher}}
    <td>{{this.wght.val}}<div class="to_top"></div></td>
    {{else}}
    <td>{{this.bgl.val}}</td>
    {{!-- <td>{{this.wght.val}}<div class="to_top"></div></td> --}}
    {{/if}}

    {{#if this.higher}}
    <td>{{this.doses.val}}<div class="to_top"></div></td>
    {{else}}
    <td>{{this.bgl.val}}</td>
    {{!-- <td>{{this.doses.val}}<div class="to_top"></div></td> --}}
    {{/if}}

    {{#if this.higher}}
    <td class="patient-info-right">{{this.steps.val}}<div class="to_top"></div></td>
    {{else}}
    <td>{{this.bgl.val}}</td>
    {{!-- <td class="patient-info-right">{{this.steps.val}}<div class="to_top"></div></td> --}}
    {{/if}}

    </tr>
</table>
{{/each}}


