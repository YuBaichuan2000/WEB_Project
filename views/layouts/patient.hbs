        </div>
    </div>
    {{{body}}}
        <!-- <footer>
            <h6>Copyright 2022 | Privacy</h6>
        </footer> -->
    <script>
        var menuList = document.getElementById("menuList");

        menuList.style.maxHeight = "0px";

        function togglemenu(){
            if(menuList.style.maxHeight == "0px"){
                menuList.style.maxHeight ="150px"
            }
            else{
                menuList.style.maxHeight ="0px"
            }
        }
    </script>
